<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ph_ad_close_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:background="@color/ph_white"
    android:visibility="gone"
    app:cardElevation="16dp"
    tools:visibility="visible"
    app:cardBackgroundColor="@color/ph_white_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ProgressBar
                android:id="@+id/ph_ad_close_progress"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:theme="@style/ProgressBarTheme" />

            <FrameLayout
                android:id="@+id/ph_ad_close_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="250dp">
            </FrameLayout>

        </FrameLayout>

        <TextView
            android:id="@+id/confirm_exit_text"
            android:text="@string/exit_confirm"
            android:gravity="center"
            android:textSize="15sp"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/grey_blue_800"
            android:layout_width="match_parent"
            android:layout_height="62dp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>